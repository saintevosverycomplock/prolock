-- Define variables
local player = game:GetService("Players").LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")

-- Function to handle player's chat
local function onChatted(message)
    if message == "+" then
        humanoid.WalkSpeed = humanoid.WalkSpeed + 20
    elseif message == "-" then
        humanoid.WalkSpeed = math.max(humanoid.WalkSpeed - 1, 0) -- Ensures walkspeed never goes below 0
    end
end

-- Connect the function to the Chatted event
player.Chatted:Connect(onChatted)
